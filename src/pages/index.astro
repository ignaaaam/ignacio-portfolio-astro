    overflow: initial;
}

.portfolio__content {
    padding: 0 1.5rem;
}

.portfolio__img {
    width: 296px;
    border-radius: .5rem;
    justify-self: center;

    box-shadow: 0 2px 4px rgba(0, 0, 0, .30);
