}

.portfolio__img:hover {
    transform: translateX(5px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, .30);
}

.portfolio__title {
    font-size: var(--h3-font-size);
    margin-bottom: var(--mb-0-5);
}

.portfolio__description {
